            "parameters": {
              "feedUrl": "https://powervirtualagents.microsoft.com/en-us/blog/feed/",
              "sinceProperty": "PublishDate"
            },
            "authentication": "@parameters('$authentication')"
          }
        }
      },
      "actions": {
        "Send_an_email_(V2)": {
          "runAfter": {},
